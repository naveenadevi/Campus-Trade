<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>My Products</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="p-10 bg-gray-50">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">My Products</h1>

    <!-- Go Home Button -->
    <a href="/home" class="bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700">üè† Home</a>
  </div>

  <!-- Add Product Button -->
  <div class="mb-4">
    <a href="/addProduct" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">+ Add Product</a>
  </div>

  <!-- Products Table -->
  <% if (products && products.length > 0) { %>
    <table class="w-full border-collapse border border-gray-300 bg-white shadow-md rounded">
      <thead class="bg-gray-100">
        <tr>
          <th class="border p-2">Title</th>
          <th class="border p-2">Price</th>
          <th class="border p-2">Category</th>
          <th class="border p-2">Stock</th>
          <th class="border p-2">Actions</th>
          <th class="border p-2">Orders</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
          <tr class="hover:bg-gray-50">
            <td class="border p-2"><%= product.title %></td>
            <td class="border p-2">‚Çπ<%= product.price %></td>
            <td class="border p-2"><%= product.category %></td>
            <td class="border p-2"><%= product.stock %></td>
            <td class="border p-2 flex space-x-2">
              <!-- Edit Button -->
              <a href="/edit/<%= product._id %>" 
                 class="bg-blue-600 text-white px-3 py-1 rounded hover:bg-blue-700">Edit</a>

              <!-- Delete Form -->
              <form action="/delete/<%= product._id %>" method="POST" onsubmit="return confirm('Delete this product?');">
                <button type="submit" class="bg-red-600 text-white px-3 py-1 rounded hover:bg-red-700">Delete</button>
              </form>
            </td>
           <td class="border p-2 text-center">
  <% if (product.buyers && product.buyers.length > 0) { %>
    <ul class="text-left">
      <% product.buyers.forEach(buyer => { %>
        <li><%= buyer.name %> (<%= buyer.email %>)</li>
      <% }) %>
    </ul>
  <% } else { %>
    <span class="text-gray-500">No buyers yet</span>
  <% } %>
</td>

          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p class="text-gray-600">No products found. Add some!</p>
  <% } %>
</body>
</html>
