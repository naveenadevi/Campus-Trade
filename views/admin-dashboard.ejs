<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Dashboard | Campus Trade </title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body { font-family: 'Inter', sans-serif; }
  </style>
</head>
<body class="bg-white text-gray-900">
  <div class="min-h-screen px-6 py-10 max-w-5xl mx-auto">
    <header class="flex items-center justify-between mb-10">
      <h1 class="text-3xl font-semibold">Campus Trade Admin</h1>
      <a href="/logout" class="text-sm text-gray-600 hover:underline">Logout</a>
    </header>

    <div class="flex justify-end mb-4">
      <a href="/admin/add-product" class="bg-black text-white px-5 py-2 rounded-lg hover:bg-gray-800 transition">+ Add Product</a>
    </div>

    <div class="overflow-x-auto border border-gray-200 rounded-xl shadow">
      <table class="min-w-full bg-white divide-y divide-gray-100">
        <thead class="bg-gray-50">
          <tr class="text-left text-sm text-gray-600">
            <th class="px-6 py-3 font-medium">Product</th>
            <th class="px-6 py-3 font-medium">Price (₹)</th>
            <th class="px-6 py-3 font-medium">Category</th>
            <th class="px-6 py-3 font-medium text-center">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100 text-sm">
          <% products.forEach(product => { %>
            <tr class="hover:bg-gray-50 transition">
              <td class="px-6 py-4"><%= product.title %></td>
              <td class="px-6 py-4">₹<%= product.price %></td>
              <td class="px-6 py-4 capitalize"><%= product.category %></td>
              <td class="px-6 py-4 text-center space-x-4">
                <a href="/admin/edit/<%= product._id %>" class="text-blue-600 hover:underline">Edit</a>
                <form action="/admin/delete/<%= product._id %>" method="POST" class="inline">
                  <button type="submit" class="text-red-500 hover:underline">Delete</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
